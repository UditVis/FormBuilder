<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content" android:layout_width="match_parent"
    android:elevation="@dimen/cardview_default_elevation"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp"
    android:paddingVertical="4dp"
    android:paddingHorizontal="6dp"
    android:id="@+id/field_container_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="4dp"
        android:paddingHorizontal="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Field Name : "
            android:textSize="14sp"
            android:id="@+id/field_name_label"
            android:labelFor="@id/field_name_textview"
            android:layout_marginVertical="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/field_name_textview"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryText"
            android:text="Here comes the field name"
            android:layout_toEndOf="@id/field_name_label"
            android:layout_marginVertical="4dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Field Type : "
            android:textSize="12sp"
            android:layout_below="@id/field_name_textview"
            android:id="@+id/field_type_label"
            android:layout_marginVertical="4dp"
            android:labelFor="@id/field_type_textview"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/field_type_textview"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryText"
            android:layout_below="@id/field_name_textview"
            android:text="Here comes the field type"
            android:layout_marginVertical="4dp"
            android:layout_toEndOf="@id/field_type_label"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/field_ref_label"
            android:textSize="8sp"
            android:layout_marginVertical="4dp"
            android:text="Ref. Id : "
            android:layout_toRightOf="@id/field_name_textview"
            android:labelFor="@id/field_ref_textview"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/field_ref_textview"
            android:textColor="@color/colorPrimaryText"
            android:layout_toEndOf="@id/field_ref_label"
            android:text="field ref"
            android:layout_marginVertical="4dp"
            android:layout_alignParentEnd="true"
            android:textSize="8sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>